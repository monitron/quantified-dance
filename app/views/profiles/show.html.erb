<h2><%= @profile.name %></h2>

<div class="row">
  <div class="col-md-6">
    <h3>Recent Days</h3>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Day</th>
          <th>Songs</th>
          <th>Time</th>
        </tr>
      </thead>
      <tbody>
        <% @recent_days.each do |day| %>
          <tr>
            <td><%= link_to l(day.date.to_date, format: :long),
                    profile_plays_path(@profile, date: day.date.to_date) %></td>
            <td><%= day.num %></td>
            <td><%= duration_as_min_sec day.secs %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-6">
    <h3>Something</h3>
  </div>
</div>
